<html>
<head>
  <title>Cardmaker</title>
  <style type="text/css">
    body { background-color: lightgray; }
    img  { width: <%= @card_width %>;    }
  </style>
</head>
<body>
  <% @data.each do |card_data| %>
    <% unless card_data['text'].nil? or card_data['text'].empty? %>
      <img src="/card/<%=encode_data(card_data)%>.png"/>
    <% end %>
  <% end %>

  <p><a href="<%=permalink%>">Permalink</a> <a href="/">Start Over</a></p>
</body>
</html>